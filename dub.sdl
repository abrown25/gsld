name "gsld"
description "Bindings to the GNU scientific library"
authors "Andrew Brown"
licence "GPL-3.0"
libs "gsl" "gslcblas"
dependency "unit-threaded" version="~>0.5.3"

configuration "test" {
    targetPath  "test"
    targetType  "executable"
    targetName  "test"
    sourcePaths "test" "source"
    excludedSourceFiles "source/gsld/randist/*" "source/gsld/rng/*"
}

configuration "main" {
    targetType "library"
}

